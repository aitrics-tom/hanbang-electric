            "V": { "name": "정격전압", "unit": "V" },
            "%Z": { "name": "% 임피던스", "unit": "%" }
          }
        },
        {
          "name": "대칭분 단락전류",
          "formula": "I_3φ = V / (√3 × Z)",
          "latex": "I_{3\\phi} = \\frac{V}{\\sqrt{3} \\times Z}",
          "variables": {
            "I_3φ": { "name": "3상 단락전류", "unit": "A" },
            "V": { "name": "선간전압", "unit": "V" },
            "Z": { "name": "임피던스", "unit": "Ω" }
          }
        }
      ]
    },
