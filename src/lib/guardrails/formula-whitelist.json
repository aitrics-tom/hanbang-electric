{
  "categories": {
    "조명설계": {
      "formulas": [
        {
          "name": "광속법 (등수 계산)",
          "formula": "N = (E × A × M) / (F × U)",
          "latex": "N = \\frac{E \\times A \\times M}{F \\times U}",
          "variables": {
            "N": { "name": "등수", "unit": "개" },
            "E": { "name": "소요조도", "unit": "lx" },
            "A": { "name": "바닥면적", "unit": "m²" },
            "M": { "name": "감광보상률", "unit": "-", "typical": "1.2~1.5" },
            "F": { "name": "광속", "unit": "lm" },
            "U": { "name": "조명률", "unit": "-", "typical": "0.4~0.7" }
          },
          "notes": "결과는 올림 처리"
        },
        {
          "name": "점광원법 (조도)",
          "formula": "E = I × cos³θ / h²",
          "latex": "E = \\frac{I \\times \\cos^3\\theta}{h^2}",
          "variables": {
            "E": { "name": "조도", "unit": "lx" },
            "I": { "name": "광도", "unit": "cd" },
            "θ": { "name": "입사각", "unit": "°" },
            "h": { "name": "광원 높이", "unit": "m" }
          }
        }
      ]
    },
    "역률개선": {
      "formulas": [
        {
          "name": "콘덴서 용량",
          "formula": "Qc = P × (tanθ₁ - tanθ₂)",
          "latex": "Q_c = P \\times (\\tan\\theta_1 - \\tan\\theta_2)",
          "variables": {
            "Qc": { "name": "콘덴서 용량", "unit": "kVar" },
            "P": { "name": "유효전력", "unit": "kW" },
            "θ₁": { "name": "개선 전 역률각", "unit": "°" },
            "θ₂": { "name": "개선 후 역률각", "unit": "°" }
          }
        },
        {
          "name": "역률 계산",
          "formula": "cosθ = P / S",
          "latex": "\\cos\\theta = \\frac{P}{S}",
          "variables": {
            "cosθ": { "name": "역률", "unit": "-" },
            "P": { "name": "유효전력", "unit": "kW" },
            "S": { "name": "피상전력", "unit": "kVA" }
          }
        }
      ]
    },
    "변압기": {
      "formulas": [
        {
          "name": "변압기 용량",
          "formula": "P_TR = P_설비 / (cosθ × η)",
          "latex": "P_{TR} = \\frac{P_{설비}}{\\cos\\theta \\times \\eta}",
          "variables": {
            "P_TR": { "name": "변압기 용량", "unit": "kVA" },
            "P_설비": { "name": "설비용량", "unit": "kW" },
            "cosθ": { "name": "역률", "unit": "-" },
            "η": { "name": "효율", "unit": "-" }
          }
        },
        {
          "name": "정격전류 (3상)",
          "formula": "I = P / (√3 × V × cosθ)",
          "latex": "I = \\frac{P}{\\sqrt{3} \\times V \\times \\cos\\theta}",
          "variables": {
            "I": { "name": "정격전류", "unit": "A" },
            "P": { "name": "전력", "unit": "W" },
            "V": { "name": "선간전압", "unit": "V" },
            "cosθ": { "name": "역률", "unit": "-" }
          }
        }
      ]
    },
    "단락전류": {
      "formulas": [
        {
          "name": "%Z법 단락전류",
          "formula": "Is = (100 × P) / (√3 × V × %Z)",
          "latex": "I_s = \\frac{100 \\times P}{\\sqrt{3} \\times V \\times \\%Z}",
          "variables": {
            "Is": { "name": "단락전류", "unit": "A" },
